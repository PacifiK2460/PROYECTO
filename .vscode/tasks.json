{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "g++ build active proyect",
        "command": "/usr/bin/gcc",
        "args": [
          "${workspaceFolder}/main.c",
          "${workspaceFolder}/include/*/*",
          "-lm",
          "-o",
          "${workspaceFolder}/main"
        ],
        "options": {
          "cwd": "/usr/bin"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "type": "shell",
        "label": "g++ debug active proyect",
        "command": "/usr/bin/gcc",
        "args": [
          "-g",
          "${workspaceFolder}/main.c",
          "${workspaceFolder}/include/*/*",
          "-lm",
          "-o",
          "${workspaceFolder}/main"
        ],
        "options": {
          "cwd": "/usr/bin"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": false
        }
      },
      {
        "type": "shell",
        "label": "g++ debug active file",
        "command": "/usr/bin/gcc",
        "args": [
          "-g",
          "${file}",
          "${workspaceFolder}/include/*/*",
          "-lm",
          "-o",
          "${workspaceFolder}/main"
        ],
        "options": {
          "cwd": "/usr/bin"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": false
        }
      }
    ]
  }